{
  "info": {
    "name": "ilia-nodejs-challenge",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "usersBaseUrl",
      "value": "http://localhost:3002"
    },
    {
      "key": "walletBaseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Users Service",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": "{{usersBaseUrl}}/health"
          }
        },
        {
          "name": "Ready",
          "request": {
            "method": "GET",
            "url": "{{usersBaseUrl}}/ready"
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "url": "{{usersBaseUrl}}/metrics"
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "idem-register-user"
              }
            ],
            "url": "{{usersBaseUrl}}/users",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"User\",\n  \"last_name\": \"Test\",\n  \"email\": \"user@test.com\",\n  \"password\": \"secret123\"\n}"
            }
          }
        },
        {
          "name": "Auth",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{usersBaseUrl}}/auth",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"password\": \"secret123\"\n}"
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{usersBaseUrl}}/users"
          }
        },
        {
          "name": "Get User By Id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{usersBaseUrl}}/users/user-id"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "idem-update-user"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{usersBaseUrl}}/users/user-id",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"User\",\n  \"last_name\": \"Updated\",\n  \"email\": \"user@test.com\",\n  \"password\": \"secret123\"\n}"
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "idem-delete-user"
              }
            ],
            "url": "{{usersBaseUrl}}/users/user-id"
          }
        }
      ]
    },
    {
      "name": "Wallet Service",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": "{{walletBaseUrl}}/health"
          }
        },
        {
          "name": "Ready",
          "request": {
            "method": "GET",
            "url": "{{walletBaseUrl}}/ready"
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "url": "{{walletBaseUrl}}/metrics"
          }
        },
        {
          "name": "Get Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{walletBaseUrl}}/balance"
          }
        },
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "idem-create-transaction"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{walletBaseUrl}}/transactions",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"target-user-id\",\n  \"type\": \"DEBIT\",\n  \"amount\": 1000\n}"
            }
          }
        },
        {
          "name": "List Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{walletBaseUrl}}/transactions"
          }
        }
      ]
    }
  ]
}
